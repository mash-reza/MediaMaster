<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_margin="@dimen/medium_margin"
    android:id="@+id/item_layout">
    <ImageView
        android:id="@+id/item_thumb_image_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:layout_margin="@dimen/small_text_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_name_text_view"
        android:text="ggrgrgr"
        android:textSize="@dimen/large_text_size"
        app:layout_constraintStart_toEndOf="@+id/item_thumb_image_view"
        app:layout_constraintBottom_toBottomOf="@+id/item_thumb_image_view"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="@dimen/medium_margin" />


</androidx.constraintlayout.widget.ConstraintLayout>