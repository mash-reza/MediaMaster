<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Mix">

    <androidx.cardview.widget.CardView

        android:id="@+id/mix_video_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginEnd="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/video_file_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@string/video_file"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/video_file_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintStart_toEndOf="@+id/video_file_textView"
                app:layout_constraintTop_toTopOf="parent" />

            <VideoView
                android:id="@+id/mix_videoView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/small_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/video_file_textView" />

            <ImageButton
                android:id="@+id/mix_video_play_imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@drawable/button_background_primary"
                android:src="@drawable/play_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mix_videoView" />

            <ImageButton
                android:id="@+id/mix_video_stop_imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@drawable/button_background_primary"
                android:src="@drawable/stop_icon"
                app:layout_constraintStart_toEndOf="@+id/mix_video_play_imageButton"
                app:layout_constraintTop_toBottomOf="@+id/mix_videoView" />

            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                app:bar_color="@color/colorPrimaryDark"
                app:bar_highlight_color="@color/colorPrimary"
                app:left_thumb_color="@color/colorPrimary"
                app:left_thumb_color_pressed="@color/colorPrimaryDark"
                app:right_thumb_color="@color/colorPrimary"
                app:right_thumb_color_pressed="@color/colorPrimaryDark"
                android:id="@+id/mix_video_range_seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/small_margin"
                app:layout_constraintBottom_toBottomOf="@id/mix_video_play_imageButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mix_video_stop_imageButton"
                app:layout_constraintTop_toTopOf="@+id/mix_video_play_imageButton" />

            <TextView
                android:id="@+id/mix_video_range_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/extra_margin"
                android:text="@string/range"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mix_video_play_imageButton" />

            <TextView
                android:id="@+id/mix_video_range_start_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/extra_margin"
                android:text="00:56"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/mix_video_range_textView"
                app:layout_constraintTop_toBottomOf="@+id/mix_video_play_imageButton" />

            <TextView
                android:id="@+id/mix_video_range_finish_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/extra_margin"
                android:text="- 1:58"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mix_video_range_start_textView"
                app:layout_constraintTop_toBottomOf="@+id/mix_video_play_imageButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/load_video_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/load_icon"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/mix_video_cardView"
        app:layout_constraintEnd_toEndOf="@+id/mix_video_cardView"
        app:layout_constraintStart_toStartOf="@+id/mix_video_cardView"
        app:layout_constraintTop_toBottomOf="@+id/mix_video_cardView" />

    <androidx.cardview.widget.CardView

        android:id="@+id/mix_audio_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginEnd="@dimen/small_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/load_video_fab">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/audio_file_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:text="@string/video_file"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/audio_file_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintStart_toEndOf="@+id/audio_file_textView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/mix_audio_play_imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@drawable/button_background_primary"
                android:src="@drawable/play_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/audio_file_textView" />

            <ImageButton
                android:id="@+id/mix_audio_stop_imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@drawable/button_background_primary"
                android:src="@drawable/stop_icon"
                app:layout_constraintStart_toEndOf="@+id/mix_audio_play_imageButton"
                app:layout_constraintTop_toBottomOf="@+id/audio_file_textView" />

            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/mix_audio_range_seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginEnd="@dimen/small_margin"
                app:bar_color="@color/colorPrimaryDark"
                app:bar_highlight_color="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@id/mix_audio_play_imageButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mix_audio_stop_imageButton"
                app:layout_constraintTop_toTopOf="@+id/mix_audio_play_imageButton"
                app:left_thumb_color="@color/colorPrimary"
                app:left_thumb_color_pressed="@color/colorPrimaryDark"
                app:right_thumb_color="@color/colorPrimary"
                app:right_thumb_color_pressed="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/mix_audio_range_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/extra_margin"
                android:text="@string/range"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mix_audio_play_imageButton" />

            <TextView
                android:id="@+id/mix_audio_range_start_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/extra_margin"
                android:text="00:56"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/mix_audio_range_textView"
                app:layout_constraintTop_toBottomOf="@+id/mix_audio_play_imageButton" />

            <TextView
                android:id="@+id/mix_audio_range_finish_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginBottom="@dimen/extra_margin"
                android:text="- 1:58"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/medium_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mix_audio_range_start_textView"
                app:layout_constraintTop_toBottomOf="@+id/mix_audio_play_imageButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/load_audio_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/load_icon"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/mix_audio_cardView"
        app:layout_constraintEnd_toEndOf="@+id/mix_audio_cardView"
        app:layout_constraintStart_toStartOf="@+id/mix_audio_cardView"
        app:layout_constraintTop_toBottomOf="@+id/mix_audio_cardView" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/large_margin"
        android:id="@+id/mix_start_fab"
        android:src="@drawable/mix_icon"/>
</androidx.constraintlayout.widget.ConstraintLayout>