<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/dub_inner_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.Dub">

            <androidx.cardview.widget.CardView

                android:id="@+id/dub_video_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginEnd="@dimen/small_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/dub_video_file_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:text="@string/video_file"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/medium_text_size"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/dub_video_file_name_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/large_margin"
                        android:layout_marginTop="@dimen/small_margin"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/medium_text_size"
                        app:layout_constraintStart_toEndOf="@+id/dub_video_file_textView"
                        app:layout_constraintTop_toTopOf="parent" />

                    <FrameLayout
                        android:background="@android:color/black"
                        android:id="@+id/dub_videoView_frame"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:layout_marginEnd="@dimen/small_margin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dub_video_file_textView">
                        <VideoView
                            android:id="@+id/dub_videoView"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>



                    <ImageButton
                        android:id="@+id/dub_video_play_imageButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:background="@drawable/button_background_primary"
                        android:src="@drawable/play_icon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dub_videoView_frame"/>

                    <ImageButton
                        android:id="@+id/dub_video_stop_imageButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginTop="@dimen/medium_margin"
                        android:background="@drawable/button_background_primary"
                        android:src="@drawable/stop_icon"
                        app:layout_constraintStart_toEndOf="@+id/dub_video_play_imageButton"
                        app:layout_constraintTop_toBottomOf="@+id/dub_videoView_frame" />


                    <SeekBar
                        android:id="@+id/dub_video_seekBar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginEnd="@dimen/small_margin"
                        app:layout_constraintBottom_toBottomOf="@id/dub_video_stop_imageButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/dub_video_stop_imageButton"
                        app:layout_constraintTop_toTopOf="@id/dub_video_stop_imageButton" />


                    <TextView
                        android:id="@+id/dub_video_range_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_margin"
                        android:layout_marginTop="@dimen/large_margin"
                        android:layout_marginBottom="@dimen/extra_margin"
                        android:text="@string/range"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/medium_text_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/dub_video_play_imageButton" />

                    <Button
                        android:id="@+id/dub_from_range_button"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="@dimen/super_margin"
                        android:background="@color/colorAccent"
                        android:text="@string/from"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/medium_text_size"
                        app:layout_constraintBottom_toBottomOf="@+id/dub_video_range_textView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/dub_video_range_textView" />

                    <Button
                        android:id="@+id/dub_to_range_button"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginEnd="@dimen/super_margin"
                        android:background="@color/colorAccent"
                        android:text="@string/to"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/medium_text_size"
                        app:layout_constraintBottom_toBottomOf="@+id/dub_video_range_textView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/dub_video_range_textView" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/visual"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/small_margin"
                android:layout_marginTop="@dimen/super_margin"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginBottom="@dimen/large_margin"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/dub_start_image_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dub_video_cardView" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/dub_load_video_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/load_icon"
                app:fabSize="mini"
                app:layout_constraintBottom_toBottomOf="@id/dub_video_cardView"
                app:layout_constraintEnd_toEndOf="@id/dub_video_cardView"
                app:layout_constraintStart_toStartOf="@+id/dub_video_cardView"
                app:layout_constraintTop_toBottomOf="@id/dub_video_cardView" />

            <ImageButton
                android:id="@+id/dub_start_image_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="@dimen/medium_margin"
                android:background="@drawable/button_background_primary"
                android:onClick="onStartClick"
                android:src="@drawable/mic_icon"
                android:layout_marginTop="@dimen/extra_margin"
                app:layout_constraintTop_toBottomOf="@+id/dub_load_video_fab"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="1"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/dub_progressbar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="@dimen/super_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginBottom="@dimen/large_margin"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>